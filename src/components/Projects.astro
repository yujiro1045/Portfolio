---
import Next from "./icons/Next.astro";
import Tailwind from "./icons/Tailwind.astro";
import Javascript from "./icons/Javascript.astro";
import React from "./icons/React.astro";
import Typescript from "./icons/Typescript.astro";
import native from "./icons/Native.astro";
import { navigate } from "astro:transitions/client";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: Next,
  },

  TAILWIND: {
    name: "Tailwind",
    class: "bg-black text-white",
    icon: Tailwind,
  },

  JAVASCRIPT: {
    name: "javascript",
    class: "bg-black text-white",
    icon: Javascript,
  },

  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },

  TYPESCRIPT: {
    name: "typescript",
    class: "bg-black text-white",
    icon: Typescript,
  },
  NATIVE: {
    name: "react-native",
    class: "bg-black text-white",
    icon: native,
  },
};

const PROJECTS = [
  {
    title: "Teslo-Shop Tienda de ropa de tesla",
    description:
      "Creada con Next.js es una pagina de una tienda de ropa de la marca tesla, la cual tiene ropa para hombres, mujeres y niÃ±os, cuanto con un carrito de compras y un navbar y sideBar totalmente funcionales ",
    github: "https://github.com/yujiro1045/Teslo-shop",
    image: "/projects/teslo-shop.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TAILWIND,
      TAGS.JAVASCRIPT,
      TAGS.REACT,
      TAGS.TYPESCRIPT,
    ],
  },
  {
    title: "FilmHub",
    description:
      "Esta es una app creada con React-Native expo, la cual es una aplicacion que muestra las peliculas mas populares del momento, contiene un buscador y una pantalla de favoritos en donde pueden guardar sus peliculas favoritas y a la vez eliminarlas de esa lista",
    tags: [TAGS.JAVASCRIPT, TAGS.NATIVE, TAGS.TYPESCRIPT],
    image: [
      "/projects/FilmHub1.jpeg",
      "/projects/FilmHub3.jpeg",
      "/projects/FilmHub4.jpeg",
    ],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article class="mb-8">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-4 flex-row pb-4">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-3 justify-center items-center`}
            >
              <tag.icon class="size-8" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      {Array.isArray(image) ? (
        <div class="flex justify-center gap-4 bg-black p-4 rounded-xl border-2 border-white shadow-2xl">
          {image.map((img, index) => (
            <img
              class="transition-transform duration-300 ease-in-out transform hover:scale-105 shadow-2xl rounded-xl shadow-white/10 w-1/4 h-auto"
              src={img}
              alt={`Captura de pantalla del proyecto ${img}`}
            />
          ))}
        </div>
      ) : (
        <img
          class="transition-transform duration-300 ease-in-out transform hover:scale-105 rounded-xl border-2 border-white shadow-2xl shadow-white/10"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
      )}
    </article>
  ))
}
